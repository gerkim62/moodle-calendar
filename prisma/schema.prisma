model Settings {
  id     String @id @default(uuid()) @map("_id")
  userId String @unique

  user User @relation(fields: [userId], references: [id])

  preferedNotificationsType NotificationType @default(EACH)
}

enum NotificationType {
  COLLECTIVE
  EACH
  NONE
}
